MD_FILE = presentation.md
PDF_FILE = presentation.pdf
HTML_FILE = presentation.html

# Commande par d√©faut (g√©n√®re le PDF)
all: pdf

# G√©n√©rer le PDF (Haute qualit√© pour la pr√©sentation)
pdf:
	marp $(MD_FILE) --pdf --allow-local-files -o $(PDF_FILE)
	@echo "‚úÖ PDF g√©n√©r√© : $(PDF_FILE)"

# G√©n√©rer le HTML (Utile pour voir les notes orateur en mode pr√©sentateur)
html:
	marp $(MD_FILE) --html --allow-local-files -o $(HTML_FILE)
	@echo "‚úÖ HTML g√©n√©r√© : $(HTML_FILE)"

# Mode "Watch" : Recompile automatiquement √† chaque :w dans Vim
watch:
	marp $(MD_FILE) --pdf --watch --allow-local-files

# Nettoyage
clean:
	rm -f $(PDF_FILE) $(HTML_FILE)
	@echo "üßπ Fichiers g√©n√©r√©s supprim√©s."
